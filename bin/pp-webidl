#!/usr/bin/env node
const fs = require("fs");
const postProcess = require("..");

const argv = require("yargs")
    .usage("Usage: $0 --input [string] --output [string]")
    .option("input", {
        alias: "i",
        describe: "Path to input file",
        demandOption: true,
        type: "string",
        normalize: true,
        requiresArg: true
    })
    .option("output", {
        alias: "o",
        describe: "Path to output file. Defaults to overwriting input",
        demandOption: false,
        type: "string",
        normalize: true,
        requiresArg: true
    })
    .strict()
    .argv;

fs.readFile(argv.input, (err, buffer) => {
    if (err) throw err;
    postProcess(buffer).then(str => {
        fs.writeFile(argv.output || argv.input, str, (err) => {
            if (err) throw err;
        });
    }, err => { throw err; });
});

